@model IEnumerable<VideoGamesShop_MVC.Models.VideoGame>

@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-success text-white rounded">Video Games</h1>

<p>
    <a class="btn btn-outline-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HighestScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerPlay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HighestScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerPlay)
            </td>
            <td>
                <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-success" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
